<% provide(:title, "ورود") %>
<h1>ورود</h1>

<div class="row">
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label(:email,'ایمیل') %>
      <%= f.text_field :email %>

      <%= f.label(:password,'پسورد') %>
      <%= f.password_field :password %>
      <br>
      <%= f.submit "ورود", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>کاربر جدید هستید? <%= link_to "ثبت نام کنید!", signup_path %></p>
  </div>
</div>