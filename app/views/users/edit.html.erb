<% provide(:title, "Edit user") %>
<h1>ویرایش حساب کاربری</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label(:name,'نام') %>
      <%= f.text_field :name %>

      <%= f.label(:email,'ایمیل') %>
      <%= f.text_field :email %>

      <%= f.label(:password,'پسورد') %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "تایید پسورد" %>
      <%= f.password_field :password_confirmation %>
      <br>
      <%= f.submit "ذخیره", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>